	"GL_LIB = libGL.a" \
	"GLU_LIB = libGLU.a" \
	"GLUT_LIB = libglut.a" \
	"GLW_LIB = libGLw.a" \
	"CC = cc" \
	"CFLAGS = -32 -mips2 -O2 -ansi -DSHM -DNO_CONST" \
	"MAKELIB = ../bin/mklib.ar-rcv" \
	"XLIBS = -lX11 -lXext -lXmu -lXi -lm"

